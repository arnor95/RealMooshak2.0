@model IEnumerable<projectMoo.Models.ViewModels.CourseViewModel>

@{
    ViewBag.Title = "Courses";
}


<div class="coursetable">
    <table class="table table-hover courses">
        <thead>
            <tr>
                <th>Course</th>
                <th>Description</th>
                <th>Starts</th>
                <th>Ends</th>
            </tr>
        </thead>
        @foreach (var course in Model)
        {
            <tr onclick="location.href = '@(Url.Action("CourseAssignments", "Assignments", new { ID = course.CourseID }))'" class="cursor-change">
                <td class="lead">@course.Title</td>
                <td>@course.Description</td>
                <td><span class="badge">@course.BeginDate.ToShortDateString()</span></td>
                <td><span class="badge">@course.EndDate.ToShortDateString()</span></td>
            </tr>


        }
    </table>
</div>


  
        

