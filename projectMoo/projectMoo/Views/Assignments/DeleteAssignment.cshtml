@model projectMoo.Models.ViewModels.DeleteAssignment

@{
    ViewBag.Title = "Delete Assignment";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-6 div-spacing-delete">
        <div class="delete">
            <h4 class="center-text-delete">Delete Assignment</h4>
            <hr />
            <p class="SmallText">This will permanently delete the assignment and all it´s connections.</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
              <div class="form-group">
                @Html.LabelFor(model => model.assignmentName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.assignmentName, ViewData["Assignments"] as List<SelectListItem>, new { @class = "form-control"})
                    @Html.ValidationMessageFor(model => model.assignmentName, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete Assignment" class="btn btn-danger form-control" />
                </div>
            </div>
        </div>
    </div>
}
