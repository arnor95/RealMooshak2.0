@model projectMoo.Models.ViewModels.UserViewModel

@{
    ViewBag.Title = "Home";
}

<div class="container mypagediv">
    <div class="row mypagediv2">
        <div class="col-sm-2"><a href="/Home/UploadPic" class="pull-left"><img id="profile-picture" title="profile image" class="img-circle img-responsive" src="~/Images/Profile/@Model.PicID"></a></div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->

            <ul class="list-group">
                <li class="list-group-item text-muted" id="profile-list">Profile</li>
                <li class="list-group-item text-right" id="profile-list"><span class="pull-left"><strong>Name</strong></span>@Model.Name</li> 
                <li class="list-group-item text-right" id="profile-list"><span class="pull-left"><strong>Email</strong></span>@User.Identity.Name</li>
                <li class="list-group-item text-right" id="profile-list"><span class="pull-left"><strong>Phone</strong></span>@Model.Phone</li>
            </ul>

            <ul class="list-group">
                <li class="list-group-item text-muted" id="profile-list">Courses<i class="fa fa-dashboard fa-1x"></i></li>
                @foreach (var item in Model.Courses)
                {
                    <li onclick="location.href = '@(Url.Action("CourseAssignments", "Assignments", new { ID = item.CourseID }))'" class="list-group-item text-left cursor-change">@item.Title</li>
                }
            </ul>

            <!---<div class="panel panel-default">
                <div class="panel-heading">Social Media</div>
                <div class="panel-body">
                    <i class="fa fa-facebook fa-2x"></i> <i class="fa fa-github fa-2x"></i> <i class="fa fa-twitter fa-2x"></i> <i class="fa fa-pinterest fa-2x"></i> <i class="fa fa-google-plus fa-2x"></i>
                </div>
            </div>-->

        </div><!--/col-3-->
        <div class="col-sm-9">

            <ul class="nav nav-tabs" id="myTab">
                <li class="active"><a href="#home" data-toggle="tab">Upcoming Assignments</a></li>
                <li><a href="#past" data-toggle="tab">Past Assignments</a></li>
                <li><a href="#messages" data-toggle="tab">Messages</a></li>
                <li><a href="#settings" data-toggle="tab">Settings</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="col-md-4">Assignments</th>
                                    <th class="col-md-3">Course</th>
                                    <th class="col-md-2">Grade</th>
                                    <th class="col-md-2">Status</th>
                                    <th class="col-md-2">Due date</th>
                                </tr>
                            </thead>
                            <tbody id="items">
                                @foreach(var item in Model.Assignments)
                                {
                                    if (DateTime.Today < item.DueDate)
                                    { 
                                    <tr onclick="location.href = '@(Url.Action("CourseAssignments", "Assignments", new { ID = item.CourseID }))'" class="cursor-change">
                                        <td>@item.Title</td>
                                        <td>@item.CourseTitle</td>
                                        <td>Not completed</td>
                                        <td>Not completed</td>
                                        <td><strong>@item.DueDate.ToShortDateString()</strong></td>
                                    </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <hr>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4 text-center">
                                <ul class="pagination" id="myPager"></ul>
                            </div>
                        </div>
                    </div><!--/table-resp-->
                    </div><!--/tab-pane-->

                <div class="tab-pane" id="past">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="col-md-4">Assignments</th>
                                    <th class="col-md-3">Course</th>
