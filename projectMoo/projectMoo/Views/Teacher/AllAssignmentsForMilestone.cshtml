@model IEnumerable<projectMoo.Models.ViewModels.SubmissionsForTeacherViewModel>


<div class="coursetable">
    <table class="table table-hover courses">
        <thead>
            <tr>
                <th>User Name</th>
                <th>State</th>
                <th>File</th>
                <th>Submission date</th>
            </tr>
        </thead>
        @foreach (var submission in Model)
        {
            if (submission.Status)
            {
                <tr onclick="location.href = '@(Url.Action("Download", "Assignments", new { file = submission.FileName }))'" class="cursor-change" id="green-background">
                    <td class="lead">@submission.UserName</td>
                    <td>@submission.Status</td>
                    <td><a href="http://localhost:1773/Assignments/Download?file=@submission.FileName" target="_blank">Download File</a></td>
                    <td><span class="badge">@submission.Date.ToShortDateString()</span></td>
                </tr>
            }
            else
            {
                <tr onclick="location.href = '@(Url.Action("Download", "Assignments", new { file = submission.FileName }))'" class="cursor-change" id="red-background">
                    <td class="lead">@submission.UserName</td>
                    <td>@submission.Status</td>
                    <td><a href="http://localhost:1773/Assignments/Download?file=@submission.FileName" target="_blank">Download File</a></td>
                    <td><span class="badge">@submission.Date.ToShortDateString()</span></td>
                </tr>
            }



        }
    </table>
</div>